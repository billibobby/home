# Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development

# Binance API Credentials
# Get your API keys from https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Coinbase API Credentials
# Get your API keys from https://www.coinbase.com/settings/api
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here

# Alpaca API Credentials (for stock trading)
# Get your API keys from https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here

# Alpha Vantage API Key (for stock market data)
# Get your free API key from https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Storage Paths
DATABASE_PATH=data/trading_bot.db
MODEL_PATH=models/
DATA_PATH=data/

# Optional: Advanced Settings
# MAX_POSITION_SIZE=1000
# RISK_PERCENTAGE=2
# MAX_CONCURRENT_POSITIONS=5
